<h2>Artists</h2>

<% if user_signed_in? && current_user.admin? %>
  <p><%= link_to "Add Artist", new_artist_path, class: 'button' %></p>
<% end %>

<% @artists.each do |artist| %>
<div class="artist">
  <h3><%= link_to artist.name, artist %></h3>
  <p><%= artist.bio.truncate(100) %></p>
</div>
<% end %>
