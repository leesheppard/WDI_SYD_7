<%= form_for @song do |f| %>
  <div class="form_field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form_field">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>
  <div class="form_field">
    <%= f.label :year %>
    <%= f.number_field :year %>
  </div>
  <div class="form_field">
    <%= f.label :duration, "Duration (in seconds)" %>
    <%= f.number_field :duration %>
  </div>
  <div class="form_field">
    <%= f.label :artist_id %>
    <%= f.collection_select :artist_id, Artist.all, :id, :name %>
  </div>
  <div class="form_field">
    <%= f.label :url %>
    <%= f.url_field :url %>
  </div>
  <div class="form_action">
    <%= f.submit %>
  </div>
<% end %>









